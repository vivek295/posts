<div class="row posts" id="post_<%=post.id%>">
  <div class="offset-md-3 col-md-6">
    <div class="card card-info">
      <div class="card-heading">
        <span class="close">
          <a href="<%= edit_post_path(post) %>" data-remote='true'>
            <i class="fa fa-edit"></i>
          </a>
          <%= button_to(post_path(post),class:'btn btn-danger delete-button', method: :delete, remote: true, data: { confirm: 'Are you sure to remove this post?' }) do %>
            <i class="fa fa-trash" aria-hidden="true"></i>
          <% end %>
        </span>
      </div>
      <div class="card-body">
        <div class="post-image">
          <%= post.caption %>
        </div>
      </div>
      <div class="card-footer">
        <div id="post-<%=post.id %>-comments">
          <%= render post.comments %>
        </div>
        <%= form_with(model: [ post, post.comments.build ], remote: true) do |form| %>
        <div class="form-group">
          <%= form.label :text, "Add Comment", class: "col-sm-6 control-label" %>
          <div class="col-sm-12">
            <%= form.text_field :text, required: true, class: "form-control", id: "post-#{post.id}" %>
          </div>
        </div>
        <div class="form-group hidden">
          <div class="col-sm-offset-3 col-sm-9">
            <%= form.submit "Comment", class: "btn btn-success btn-sm" %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
